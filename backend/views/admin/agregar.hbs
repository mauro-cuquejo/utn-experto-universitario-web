<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/admin/novedades/agregar" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Descripcion Figura"
                        name="descripcion"></textarea>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Precio" name="precio">
                </div>
                <div class="form-group">
                    <label for="imagen">Subir Imagen (No disponible a√∫n)</label>
                    <input type="file" class="form-control-file" id="imagen" name="imagen">
                </div>
                <div class="form-buttons-container">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"> Guardar</i>
                    </button>
                    <a class="btn btn-secondary" href="/admin/novedades" role="button">
                        <i class="fa fa-times"> Cancelar</i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
{{#if error}}
<h5>{{message}}</h5>
{{/if}}